#!/bin/bash

# Pre-commit hook to check Dart/Flutter code formatting and linting
# This hook runs before each commit to ensure code quality

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${GREEN}Running pre-commit checks...${NC}"

# Get list of staged Dart files
STAGED_DART_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.dart$' || true)

# If no Dart files are staged, check all Dart files
if [ -z "$STAGED_DART_FILES" ]; then
  echo -e "${YELLOW}No staged Dart files found. Checking all Dart files...${NC}"
  DART_FILES=$(find . -name "*.dart" -not -path "./lib/l10n/*" -not -path "./.dart_tool/*" -not -path "./build/*" || true)
else
  # Filter out l10n files and build files
  DART_FILES=$(echo "$STAGED_DART_FILES" | grep -v "^lib/l10n/" | grep -v "^\.dart_tool/" | grep -v "^build/" || true)
fi

if [ -z "$DART_FILES" ]; then
  echo -e "${GREEN}No Dart files to check.${NC}"
  exit 0
fi

# Check 1: Formatting (fast - only staged files)
echo -e "${GREEN}Checking code formatting (line-length=120)...${NC}"
FORMAT_ERRORS=0

# Check formatting without modifying files
for file in $DART_FILES; do
  if [ -f "$file" ]; then
    if ! dart format --line-length=120 --output=none --set-exit-if-changed "$file" 2>/dev/null; then
      echo -e "${RED}✗ Formatting error in: $file${NC}"
      echo -e "${YELLOW}  Run: dart format --line-length=120 $file${NC}"
      FORMAT_ERRORS=1
    fi
  fi
done

if [ $FORMAT_ERRORS -eq 1 ]; then
  echo -e "${RED}Formatting check failed!${NC}"
  echo -e "${YELLOW}To fix formatting issues, run:${NC}"
  echo -e "${YELLOW}  find . -name \"*.dart\" -not -path \"./lib/l10n/*\" -not -path \"./.dart_tool/*\" | xargs dart format --line-length=120${NC}"
  exit 1
fi

echo -e "${GREEN}✓ Formatting check passed${NC}"

# Note: Analysis is skipped in pre-commit hook for speed
# Full project analysis runs in CI/CD (GitHub Actions) as a safety net
# This keeps pre-commit fast while still ensuring code quality in CI
echo -e "${GREEN}All pre-commit checks passed!${NC}"
echo -e "${YELLOW}Note: Full analysis runs in CI/CD${NC}"
exit 0

