#!/bin/bash

# Pre-commit hook to check Dart/Flutter code formatting
# This hook runs before each commit to ensure code quality
# Optimized for speed: only checks staged files (dart format handles multiple files efficiently)

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${GREEN}Running pre-commit checks...${NC}"

# Get list of staged Dart files (only check staged files for speed)
STAGED_DART_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.dart$' || true)

# Filter out l10n files and build files
DART_FILES=$(echo "$STAGED_DART_FILES" | grep -v "^lib/l10n/" | grep -v "^\.dart_tool/" | grep -v "^build/" || true)

if [ -z "$DART_FILES" ]; then
  echo -e "${GREEN}No Dart files to check.${NC}"
  exit 0
fi

# Check 1: Formatting (fast - only staged files)
echo -e "${GREEN}Checking code formatting (line-length=120)...${NC}"

# Convert newline-separated list to space-separated arguments
# Filter to only existing files (safety check)
FILES_TO_CHECK=""
for file in $DART_FILES; do
  if [ -f "$file" ]; then
    FILES_TO_CHECK="$FILES_TO_CHECK $file"
  fi
done

# Run dart format on all files at once (much simpler and faster!)
if ! dart format --line-length=120 --output=none --set-exit-if-changed $FILES_TO_CHECK 2>/dev/null; then
  echo -e "${RED}Formatting check failed!${NC}"
  echo -e "${YELLOW}Some files need formatting. Run:${NC}"
  echo -e "${YELLOW}  dart format --line-length=120 $FILES_TO_CHECK${NC}"
  exit 1
fi

echo -e "${GREEN}âœ“ Formatting check passed${NC}"

# Note: Analysis is skipped in pre-commit hook for speed
# Full project analysis runs in CI/CD (GitHub Actions) as a safety net
# This keeps pre-commit fast while still ensuring code quality in CI
echo -e "${GREEN}All pre-commit checks passed!${NC}"
echo -e "${YELLOW}Note: Full analysis runs in CI/CD${NC}"
exit 0

